{
  "compilerOptions": {
    "target": "es2015",
    "module": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "incremental": true
  },
  "include": ["*/*.ts"],
  "exclude": ["node_modules", "*.test.ts", "*.spec.ts"]
}
